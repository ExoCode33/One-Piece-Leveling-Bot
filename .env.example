# .env.example - Complete Discord Leveling Bot Configuration
# Copy this file to .env and fill in your values

# === REQUIRED SETTINGS ===
DISCORD_TOKEN=your_discord_bot_token_here
DATABASE_URL=postgresql://username:password@hostname:port/database
NODE_ENV=production

# === XP CONFIGURATION ===
# Message XP (random range)
MESSAGE_XP_MIN=25
MESSAGE_XP_MAX=35
MESSAGE_COOLDOWN=60000  # 60 seconds

# Voice XP (per minute in voice chat)
VOICE_XP_MIN=45
VOICE_XP_MAX=55
VOICE_COOLDOWN=60000     # 60 seconds
VOICE_MIN_MEMBERS=2      # Minimum members required for XP
VOICE_ANTI_AFK=true      # Skip XP for muted/deafened users

# Reaction XP
REACTION_XP_MIN=25
REACTION_XP_MAX=35
REACTION_COOLDOWN=300000 # 300 seconds (5 minutes)

# === FORMULA CONFIGURATION ===
FORMULA_CURVE=exponential    # exponential, linear, or logarithmic
FORMULA_MULTIPLIER=1.75      # Level curve multiplier
MAX_LEVEL=50                 # Maximum level
XP_MULTIPLIER=1.0            # Global XP multiplier

# === LEVEL ROLE REWARDS ===
# Replace with your actual Discord role IDs
LEVEL_5_ROLE=1382197037231247420
LEVEL_10_ROLE=1382197092377952317
LEVEL_15_ROLE=1382197145490423960
LEVEL_20_ROLE=1382197358179385394
LEVEL_25_ROLE=1382197335257251850
LEVEL_30_ROLE=1382197304181653654
LEVEL_35_ROLE=1382197282845233212
LEVEL_40_ROLE=1382197260212768808
LEVEL_45_ROLE=1382197223923650691
LEVEL_50_ROLE=1382197180768583690

# === LEVEL UP MESSAGES ===
LEVELUP_ENABLED=true
LEVELUP_CHANNEL=1381824925786046485        # Channel for level up announcements
LEVELUP_MESSAGE=Congratulations {user}! You've reached **Level {level}**!
LEVELUP_SHOW_XP=true                       # Show total XP in level up message
LEVELUP_SHOW_PROGRESS=true                 # Show progress to next level
LEVELUP_SHOW_ROLE=true                     # Show unlocked role
LEVELUP_PING_USER=false                    # Ping user in level up message

# === LEADERBOARD CONFIGURATION ===
LEADERBOARD_EXCLUDE_ROLE=717768828368715781  # Role to exclude from leaderboard
LEADERBOARD_TOP_ROLE=your_top_role_id_here   # Special role for #1 user

# === LOGGING AND DEBUGGING ===
XP_LOG_ENABLED=true                        # Enable XP logging
XP_LOG_CHANNEL=1382350170439680121         # Channel for XP logs
XP_LOG_MESSAGES=true                       # Log message XP
XP_LOG_REACTIONS=true                      # Log reaction XP
XP_LOG_VOICE=false                         # Log voice XP (can be spammy)

DEBUG_MODE=true                            # Enable debug logging
DEBUG_XP=true                              # Debug XP calculations
DEBUG_VOICE=true                           # Debug voice tracking
DEBUG_COMMANDS=true                        # Debug command registration
DEBUG_DATABASE=true                        # Debug database operations

# === OPTIONAL FEATURES ===
# Auto-role management
AUTO_REMOVE_LOWER_ROLES=false              # Remove lower level roles when gaining higher ones

# Voice session tracking
TRACK_VOICE_SESSIONS=true                  # Store detailed voice session data

# Custom multipliers for different activities
WEEKEND_MULTIPLIER=1.5                     # Extra XP on weekends
NIGHT_MULTIPLIER=1.2                       # Extra XP during night hours (10PM-6AM)

# Rate limiting
MAX_XP_PER_HOUR=1000                       # Maximum XP a user can gain per hour
ANTI_SPAM_ENABLED=true                     # Enable anti-spam protection

# Seasonal events
EVENT_MULTIPLIER=2.0                       # Event XP multiplier
EVENT_ENABLED=false                        # Enable event mode
EVENT_START_DATE=2025-01-01                # Event start date
EVENT_END_DATE=2025-01-31                  # Event end date

# === ADVANCED SETTINGS ===
# Database connection pool
DB_POOL_MIN=2                              # Minimum database connections
DB_POOL_MAX=10                             # Maximum database connections

# Bot performance
CACHE_TTL=300                              # Cache time-to-live in seconds
UPDATE_INTERVAL=60                         # How often to update user stats (seconds)

# Webhook settings (optional)
WEBHOOK_URL=your_webhook_url_here          # Discord webhook for important notifications
WEBHOOK_ENABLED=false                      # Enable webhook notifications

# API settings (if you plan to add a web dashboard)
API_ENABLED=false                          # Enable REST API
API_PORT=3000                              # API port
API_SECRET=your_api_secret_here            # API authentication secret

# === PERMISSION SETTINGS ===
# Who can use admin commands (besides Administrators)
ADMIN_ROLE_IDS=123456789,987654321         # Comma-separated role IDs
MOD_ROLE_IDS=111111111,222222222           # Moderator role IDs

# === BACKUP SETTINGS ===
AUTO_BACKUP=true                           # Enable automatic database backups
BACKUP_INTERVAL=24                         # Backup interval in hours
BACKUP_CHANNEL=your_backup_channel_id      # Channel to send backup notifications

# === INTEGRATION SETTINGS ===
# MEE6 import (if migrating from MEE6)
MEE6_IMPORT_ENABLED=false                  # Enable MEE6 data import
MEE6_API_KEY=your_mee6_api_key            # MEE6 API key (if available)

# Carl-bot integration
CARL_IMPORT_ENABLED=false                  # Enable Carl-bot data import

# Custom bot features
ENABLE_DAILY_REWARDS=false                 # Daily login rewards
DAILY_REWARD_XP=100                        # XP given for daily check-in
ENABLE_STREAKS=false                       # Activity streaks
STREAK_BONUS_MULTIPLIER=1.1                # Bonus for maintaining streaks

# === NOTIFICATION SETTINGS ===
DM_LEVEL_UPS=false                         # Send level up messages via DM
DM_WEEKLY_STATS=false                      # Send weekly stats via DM
WEEKLY_STATS_DAY=sunday                    # Day of week to send weekly stats

# === ECONOMY INTEGRATION (if you have an economy bot) ===
ECONOMY_ENABLED=false                      # Enable economy integration
COINS_PER_LEVEL=1000                       # Coins awarded per level up
ECONOMY_CURRENCY_NAME=coins                # Name of your currency

# === CUSTOM MESSAGES ===
WELCOME_MESSAGE=Welcome {user} to the server! Start chatting to gain XP!
LEVEL_UP_GIF_ENABLED=false                 # Include random GIF in level up messages
CUSTOM_LEVEL_MESSAGES=false                # Use custom messages for specific levels

# === MODERATION INTEGRATION ===
RESET_XP_ON_MUTE=false                     # Reset XP when user is muted
RESET_XP_ON_BAN=true                       # Reset XP when user is banned
IGNORE_BOTS=true                           # Ignore bot messages for XP

# === UTILITY COMMANDS CONFIGURATION ===
# Master switch for all utility commands
UTILITY_COMMANDS_ENABLED=true

# Testing Features
UTILITY_TESTING_ENABLED=true          # Enable/disable all testing commands
UTILITY_TEST_XP=true                  # Allow XP system testing
UTILITY_TEST_DB=true                  # Allow database testing
UTILITY_TEST_LOG=true                 # Allow logging system testing
UTILITY_TEST_CMD=true                 # Allow command testing

# Maintenance Features
UTILITY_MAINTENANCE_ENABLED=true     # Enable/disable maintenance commands
UTILITY_MAINT_COOLDOWNS=true         # Allow clearing XP cooldowns
UTILITY_MAINT_DB_SYNC=true           # Allow database synchronization
UTILITY_MAINT_VOICE=true             # Allow voice session restart
UTILITY_MAINT_CLEANUP=true           # Allow old session cleanup

# Information Features
UTILITY_INFO_ENABLED=true            # Enable/disable info commands
UTILITY_INFO_DETAILED=true           # Show detailed bot statistics
UTILITY_INFO_MEMORY=true             # Show memory usage information
UTILITY_INFO_ENV=true                # Show environment configuration

# Backup Features
UTILITY_BACKUP_ENABLED=true          # Enable/disable backup commands
UTILITY_BACKUP_JSON=true             # Allow JSON format backups
UTILITY_BACKUP_CSV=true              # Allow CSV format backups
UTILITY_BACKUP_AUTO=false            # Enable automatic daily backups
UTILITY_BACKUP_MAX_SIZE=10           # Maximum backup file size in MB

# Security Settings
UTILITY_ADMIN_ONLY=true              # Restrict to administrators only
UTILITY_ROLE_RESTRICTIONS=false      # Enable additional role restrictions
UTILITY_AUDIT_LOG=true               # Log all utility command usage
UTILITY_RATE_LIMIT=true              # Enable rate limiting for utility commands

# Advanced Utility Settings
UTILITY_ALLOWED_ROLES=123456789,987654321  # Comma-separated role IDs (if role restrictions enabled)
UTILITY_BLOCKED_USERS=111111111,222222222  # Comma-separated user IDs to block
UTILITY_MAX_BACKUP_SIZE=50                 # Maximum backup size in MB
UTILITY_SESSION_CLEANUP_DAYS=7             # Days before cleaning old sessionsMUTE=false                     # Reset XP when user is muted
RESET_XP_ON_BAN=true                       # Reset XP when user is banned
IGNORE_BOTS=true                           # Ignore bot messages for XP
