# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Environment
NODE_ENV=production

# ===== XP CONFIGURATION =====

# Message XP (Random range)
MESSAGE_XP_MIN=25
MESSAGE_XP_MAX=35
MESSAGE_COOLDOWN=60000

# Voice XP (Random range per minute)
VOICE_XP_MIN=45
VOICE_XP_MAX=55
VOICE_COOLDOWN=180000
VOICE_MIN_MEMBERS=2
VOICE_ANTI_AFK=true

# Reaction XP (Random range)
REACTION_XP_MIN=25
REACTION_XP_MAX=35
REACTION_COOLDOWN=300000

# ===== FORMULA CONFIGURATION =====

# Curve Types: linear, exponential, logarithmic
FORMULA_CURVE=exponential
FORMULA_MULTIPLIER=1.75
MAX_LEVEL=50

# Global XP Multiplier
XP_MULTIPLIER=1.0

# ===== LEVEL ROLES =====

# Level Role Rewards (Discord Role IDs) - ONE PIECE BOUNTY ROLES
LEVEL_5_ROLE=1382197037231247420
LEVEL_10_ROLE=1382197092377952317
LEVEL_15_ROLE=1382197145490423960
LEVEL_20_ROLE=1382197358179385394
LEVEL_25_ROLE=1382197335257251850
LEVEL_30_ROLE=1382197304181653654
LEVEL_35_ROLE=1382197282845233212
LEVEL_40_ROLE=1382197260212768808
LEVEL_45_ROLE=1382197223923650691
LEVEL_50_ROLE=1382197180768583690

# ===== LEVEL UP MESSAGES (ONE PIECE THEME) =====

# Level up message configuration
LEVELUP_ENABLED=true

# 🎯 OPTION 1: Use exact channel NAME (easier)
LEVELUP_CHANNEL_NAME=bounty-updates

# 🎯 OPTION 2: Use channel ID (more reliable)
# LEVELUP_CHANNEL=123456789012345678

# One Piece themed bounty message
LEVELUP_MESSAGE=🏴‍☠️ **BOUNTY UPDATE!** {user}'s bounty has increased to **{bounty}**! You are now a **Level {level}** pirate! ⚔️

LEVELUP_SHOW_XP=true
LEVELUP_SHOW_PROGRESS=true
LEVELUP_SHOW_ROLE=true
LEVELUP_PING_USER=false

