# .env.example - Copy this to .env and fill in your values

# ================================
# REQUIRED VARIABLES
# ================================

# Your Discord bot token from Discord Developer Portal
DISCORD_TOKEN=your_discord_bot_token_here

# Database connection (automatically set by Railway PostgreSQL service)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Environment mode
NODE_ENV=production

# ================================
# XP CONFIGURATION
# ================================

# Message XP (random range)
MESSAGE_XP_MIN=15
MESSAGE_XP_MAX=25
MESSAGE_COOLDOWN=60000  # 60 seconds

# Voice XP (per minute, random range)
VOICE_XP_MIN=30
VOICE_XP_MAX=50
VOICE_COOLDOWN=60000    # 60 seconds
VOICE_MIN_MEMBERS=2     # Minimum members in voice channel
VOICE_ANTI_AFK=true     # Enable anti-AFK detection

# Reaction XP (random range)
REACTION_XP_MIN=5
REACTION_XP_MAX=10
REACTION_COOLDOWN=30000 # 30 seconds

# ================================
# LEVEL SYSTEM CONFIGURATION
# ================================

# Global XP multiplier
XP_MULTIPLIER=1.0

# Maximum level users can reach
MAX_LEVEL=50

# ================================
# LEVEL UP MESSAGES
# ================================

# Enable level up announcements
LEVELUP_ENABLED=true

# Show XP details in level up messages
LEVELUP_SHOW_XP=true

# Ping user in level up messages
LEVELUP_PING_USER=false

# ================================
# LEVEL ROLE REWARDS (Optional)
# ================================
# Get role IDs by right-clicking roles in Discord (Developer Mode required)

# LEVEL_5_ROLE=123456789012345678
# LEVEL_10_ROLE=123456789012345679
# LEVEL_15_ROLE=123456789012345680
# LEVEL_20_ROLE=123456789012345681
# LEVEL_25_ROLE=123456789012345682
# LEVEL_30_ROLE=123456789012345683
# LEVEL_35_ROLE=123456789012345684
# LEVEL_40_ROLE=123456789012345685
# LEVEL_45_ROLE=123456789012345686
# LEVEL_50_ROLE=123456789012345687

# ================================
# OPTIONAL SETTINGS
# ================================

# Specific channel for level up messages (optional)
# LEVELUP_CHANNEL=123456789012345688

# Custom level up message template
# LEVELUP_MESSAGE=Congratulations {user}! You've reached **Level {level}**!
