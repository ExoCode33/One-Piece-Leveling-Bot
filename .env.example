# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Environment
NODE_ENV=production

# ===== XP CONFIGURATION =====

# Message XP (Random range)
MESSAGE_XP_MIN=25
MESSAGE_XP_MAX=35
MESSAGE_COOLDOWN=60000

# Voice XP (Random range per minute)
VOICE_XP_MIN=45
VOICE_XP_MAX=55
VOICE_COOLDOWN=180000
VOICE_MIN_MEMBERS=2
VOICE_ANTI_AFK=true

# Reaction XP (Random range)
REACTION_XP_MIN=25
REACTION_XP_MAX=35
REACTION_COOLDOWN=300000

# ===== FORMULA CONFIGURATION =====

# Curve Types: linear, exponential, logarithmic
FORMULA_CURVE=exponential
FORMULA_MULTIPLIER=1.75
MAX_LEVEL=50

# Global XP Multiplier
XP_MULTIPLIER=1.0

# ===== LEVEL ROLES =====

# Level Role Rewards (Discord Role IDs)
LEVEL_5_ROLE=
LEVEL_10_ROLE=
LEVEL_15_ROLE=
LEVEL_20_ROLE=
LEVEL_25_ROLE=
LEVEL_30_ROLE=
LEVEL_35_ROLE=
LEVEL_40_ROLE=
LEVEL_45_ROLE=
LEVEL_50_ROLE=

# ===== LEVEL UP MESSAGES =====

# Level up message configuration
LEVELUP_ENABLED=true

# ðŸŽ¯ OPTION 1: Use exact channel NAME (easier)
LEVELUP_CHANNEL_NAME=leveling

# ðŸŽ¯ OPTION 2: Use channel ID (more reliable)
# LEVELUP_CHANNEL=123456789012345678

LEVELUP_MESSAGE=Congratulations {user}! You've reached **Level {level}**!
LEVELUP_SHOW_XP=true
LEVELUP_SHOW_PROGRESS=true
LEVELUP_SHOW_ROLE=true
LEVELUP_PING_USER=false

# ===== CHANNEL SETUP GUIDE =====
# OPTION 1 - Channel Name (recommended):
# 1. Create a channel named exactly "leveling" (or whatever you want)
# 2. Set LEVELUP_CHANNEL_NAME=leveling
# 3. Bot will find it automatically!

# OPTION 2 - Channel ID:
# 1. Enable Developer Mode in Discord Settings > Advanced
# 2. Right-click on any text channel
# 3. Click "Copy ID"
# 4. Set LEVELUP_CHANNEL=the_copied_id

# ===== EXAMPLES =====

# Example settings for different server types:

# SLOW PROGRESSION SERVER:
# MESSAGE_XP_MIN=15
# MESSAGE_XP_MAX=20
# VOICE_XP_MIN=30
# VOICE_XP_MAX=40
# REACTION_XP_MIN=15
# REACTION_XP_MAX=20
# XP_MULTIPLIER=0.5

# FAST PROGRESSION SERVER:
# MESSAGE_XP_MIN=40
# MESSAGE_XP_MAX=60
# VOICE_XP_MIN=80
# VOICE_XP_MAX=100
# REACTION_XP_MIN=40
# REACTION_XP_MAX=60
# XP_MULTIPLIER=2.0

# VOICE FOCUSED COMMUNITY:
# MESSAGE_XP_MIN=20
# MESSAGE_XP_MAX=25
# VOICE_XP_MIN=60
# VOICE_XP_MAX=80
# REACTION_XP_MIN=15
# REACTION_XP_MAX=20

# COOLDOWN EXPLANATIONS:
# 60000 = 1 minute
# 180000 = 3 minutes  
# 300000 = 5 minutes
# 600000 = 10 minutes

